package com.kensev.accounts;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import com.kensev.cruds.ConnectionManager;

public class Account {
	
	static boolean login(String email, String password) throws SQLException {
		Connection connection = ConnectionManager.getConnection();
		String queryStatement = String.format("SELECT email, username FROM accounts WHERE email = '%s', username = '%s'", email, password);
		try(Statement statement = connection.createStatement();
				ResultSet rs = statement.executeQuery(queryStatement);){
			if(rs.next()) return true;
			else return false;
		}	
	}
}
